<!DOCTYPE html>
<html>
  <head>
    <title><%= title%></title>
    <meta name="description" content="A description of the page" />
    <meta charset="UTF-8">
    <!-- Bootstrap -->
    <link href="lib/bootstrap/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="lib/coordel-bootstrap/css/coordel.css" rel="stylesheet" media="screen">
    <link href="css/ideas.css" rel="stylesheet" media="screen">
    <link rel="shortcut icon" href="img/favicon.gif" /> 
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">

          <a id="addIdea" data-toggle="modal" data-target="#addIdeaModal" type="button" rel="tooltip" title="Share your Great Idea" class="pull-right btn btn-primary"><i class="c-icon-add"></i></a>
          <div class="top-divider pull-right"></div>

          <div class="btn-group pull-right">
            <button class="btn btn-inverse dropdown-toggle" data-toggle="dropdown"><i class="c-icon-cog"></i><span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/settings/profile">Profile</a></li>
              <li class="divider"></li>
              <li id="sign-out" data-token="<%=token%>"><a>Sign out</a></li>
            </ul>
          </div>
          <div class="top-divider pull-right"></div>
          <form class="navbar-search pull-right">
            <input style="width: 163px" type="text" class="search-query" placeholder="Search">
          </form>
          
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li id="menuIdeas"><a id="menuIdeas" href="/"><i class="c-icon-idea"></i>Ideas</a></li>
              <li id="menuCoordel"><a href="http://app.coordel.com:8090/web"><i class="c-icon-coordel"></i>Workspace</a></li>
              <li id="menuBlueprints"><a href="/blueprints"><i class="c-icon-blueprint"></i>Blueprints</a></li>
              <li id="menuStream"  class="active"><a href="/<%=username%>"><i class="c-icon-stream"></i>Me</a></li>
            </ul>
          </div><!--/.nav-collapse -->
          <a style="cursor: default" class="brand" href="#"><img style="margin-left: 4px;" src="lib/coordel-bootstrap/img/logo.png"/></a>
        </div>
      </div>
    </div>
    <div class="wrapper clearfix">
      <div class="left-column">
        <div class="bg-white rounded">
          <ul class="nav nav-tabs nav-stacked">
            <li class="active"> 
              <a href="/<%=username%>"><i class="icon-chevron-right menu-chevron"></i>Ideas<span id="navIdeas" class="label pull-right">0</span></a>
            </li>
            <li>
              <a href="/supporting"><i class="icon-chevron-right menu-chevron"></i>Supporting<span id="navSupporting" class="label pull-right">0</span></a>
            </li>
            
            <li>
              <a href="/money"><i class="icon-chevron-right menu-chevron"></i>Pledged money<span id="navMoney" class="label pull-right">0</span></a>
            </li>
            <li>
              <a href="/time"><i class="icon-chevron-right menu-chevron"></i>Pledged time<span id="navTime" class="label pull-right">0</span></a>
            </li>
            <li>
              <a href="/contacts"><i class="icon-chevron-right menu-chevron"></i>Contacts<span id="navContacts" class="label pull-right">0</span></a>
            </li>
            <li>
              <a href="/time"><i class="icon-chevron-right menu-chevron"></i>Feedback<span id="navFeedback" class="label pull-right">0</span></a>
            </li>
          </ul>
        </div>
        <% include includes/about %>
      </div>
      <div class="main-column">
        <div id="userProfileContainer" class="user-profile-container nav user-profile rounded-column"></div>
        <div class="stream-container bg-white no-padding">
          <div class="stream-header">
            <h4>Ideas</h4>
            <div></div>
          </div>
          <div class="stream">
            <div id="stream-items-container" class="stream-items">
              
            </div>
          </div>
          <div class="stream-footer">
            <div style="margin: 0 auto; width: 100px;">
              <img class="logo" src="lib/coordel-bootstrap/img/logo.png"/>
              <div></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include includes/modals %>


    <!--logout form -->
    <form class="hide" id="sign-out-form" method="post" action="/sessions/delete">
      <input type="submit" value="Logout">
      <input type="hidden" name="_csrf" value="<%= token%>">
    </form>

    <!--csrf -->
    <div class="hide" id="mainCsrf"><%=_csrf%></div>

    <!-- scripts -->
    <script src="lib/jquery/jquery.js"></script>
    <script src="lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="lib/moment/moment.min.js"></script>
    <script src="lib/accounting/accounting.min.js"></script>
    <script src="lib/jquery/jquery.validate.min.js"></script>
    <script src="lib/jquery/jquery.infinitescroll.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="lib/md5/md5.js"></script>

    <!-- dojo           -->
    <script data-dojo-config="async: 1, dojoBlankHtmlUrl: '/blank.html',
        packages: [ {
            name: 'app',
            location: '/js/app'
        } ]"
    src="//ajax.googleapis.com/ajax/libs/dojo/1.8.1/dojo/dojo.js"></script>
    <script>
      // load our app module and wait for the DOM to be ready
      require(['app/controllers/app', 'dojo/domReady!' ], function(app){
        //this let's us bootstrap the objects from the server
        app.init({_csrf:'<%=_csrf%>', ideas: JSON.parse(unescape('<%-ideas%>')),  profile: JSON.parse(unescape('<%-profile%>')), user: JSON.parse(unescape('<%- user%>')), username: '<%=username%>', contacts: JSON.parse(unescape('<%- contacts%>')), menu: '<%=menu%>'});
      });
    </script>

    
  </body>
</html>
